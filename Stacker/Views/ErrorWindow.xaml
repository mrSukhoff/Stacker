<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm ="clr-namespace:Stacker.ViewModels"
    x:Class="Stacker.ErrorWindow"
    mc:Ignorable="d"
    Title="Ошибка!" 
    Width="500"
    Height="500" 
    ResizeMode="NoResize"
    SnapsToDevicePixels="True"
    Background="{DynamicResource Color5}"
    BorderBrush="{DynamicResource Color5}"
    d:DataContext="{d:DesignInstance vm:ViewModel}"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>

        <ListView Grid.Row="0" Background="{StaticResource Color4}" FontSize="48" ItemsSource="{Binding Errors}"/>
        <Button Grid.Row="1" Content="С Б Р О С И Т Ь"  FontSize="36" Background="{StaticResource StopLightColor}" Click="Button_Click" FontWeight="Bold" />
    </Grid>

</Window>
