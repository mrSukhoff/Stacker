<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm ="clr-namespace:Stacker.ViewModels" x:Name="ErrorWindowInstance"
    x:Class="Stacker.ErrorWindow"
    mc:Ignorable="d"
    Title="Ошибка!" 
    Width="500"
    Height="500" 
    ResizeMode="NoResize"
    SnapsToDevicePixels="True"
    Background="{DynamicResource Color5}"
    BorderBrush="{DynamicResource Color5}"
    d:DataContext="{d:DesignInstance vm:ViewModel}"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>

        <ListView x:Name="ErrorsLitsView" Grid.Row="0"   FontSize="24" Background="{StaticResource Color4}"  Foreground="{DynamicResource Color1}" ItemsSource="{Binding Errors}"/>
        <Button   Content="С Б Р О С И Т Ь" Grid.Row="1" FontSize="36" Background="{StaticResource StopLightColor}" FontWeight="Bold"  Style="{DynamicResource RegularButtonStyle}" Command="{Binding CloseErrorWindowCmd}" />
    </Grid>

</Window>
