<Window x:Class="Probe1.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Probe1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900" MinWidth="900" MinHeight="599.9" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Loaded="Window_Loaded">
    <Grid Margin="1,1,1,3">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="30"/>
        </Grid.RowDefinitions>
        <StatusBar Margin="3,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Grid.Row="1"/>
        <TabControl Margin="3" FontSize="16">
            <TabItem Header="_Автоматический режим">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="67.72"/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="ClaimsDataGrid" Margin="5,5,0,10" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" HeadersVisibility="Row" SelectionMode="Single"/>
                    <ToggleButton Content="_Привезти" HorizontalAlignment="Left" Height="50" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="100" Grid.Row="1" />
                    <ToggleButton Content="_Увезти" HorizontalAlignment="Left" Height="50" Margin="387,7.72,0,0" VerticalAlignment="Top" Width="100" Grid.Row="1"/>
                    <ToggleButton Content="_Отменить" HorizontalAlignment="Right" Height="50" Margin="0,7.72,10,0" VerticalAlignment="Top" Width="100" Grid.Row="1" />
                </Grid>
            </TabItem>
            <TabItem Header="_Ручной режим">
                <Grid Margin="3">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="87*"/>
                        <ColumnDefinition Width="260*"/>
                        <ColumnDefinition Width="87*"/>
                    </Grid.ColumnDefinitions>
                    <ToggleButton Content="X" HorizontalAlignment="Left" Height="50" Margin="100,26.717,0,0" VerticalAlignment="Top" Width="50"  FontSize="20" Grid.Column="1" MinWidth="50" MinHeight="50"/>
                    <ToggleButton Content="Y" HorizontalAlignment="Right" Height="50" Margin="0,26.717,100,0" Width="50"  FontSize="20" Grid.Column="1" VerticalAlignment="Top"/>
                    <Label Content="Стеллаж" Grid.Column="1" Height="50" Margin="205.01,26.717,164.99,0" VerticalAlignment="Top" Width="150" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="100,33.462,0,0" Width="60" Grid.Row="1" Height="50" VerticalAlignment="Top"/>
                    <Label Content="Ряд" Grid.Column="1" HorizontalAlignment="Center" Height="50" Margin="235,33.462,175,0" VerticalAlignment="Top" Width="110" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1"/>
                    <ComboBox Grid.Column="1" HorizontalAlignment="Left" Height="50" Margin="100,32.86,0,0" VerticalAlignment="Top" Width="60" Grid.Row="2"/>
                    <Label Content="Этаж" Grid.Column="1" HorizontalAlignment="Center" Height="50" Margin="235,32.86,175,0" VerticalAlignment="Top" Width="110" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="2"/>
                    <Button Content="Привезти" Grid.Column="1" HorizontalAlignment="Left" Height="50" Margin="10,0,0,10" Grid.Row="3" VerticalAlignment="Bottom" Width="100" FontSize="20"/>
                    <Button Content="Увезти" Grid.Column="1" HorizontalAlignment="Right" Height="50" Margin="0,0,10,10" Grid.Row="3" VerticalAlignment="Bottom" Width="100" FontSize="20"/>
                </Grid>
            </TabItem>
            <TabItem Header="Ошибки">
                <Grid Background="#FFE5E5E5">
                    <ListView x:Name="testListView" Margin="3">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Настройка">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
