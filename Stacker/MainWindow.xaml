<Window x:Name="Stacker" x:Class="Stacker.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stacker"
        mc:Ignorable="d"
        Title="Штабелер" Height="600" Width="900" MinWidth="900" MinHeight="599.9" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Loaded="Window_Loaded">
    <Grid Margin="1,1,1,3">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="30"/>
        </Grid.RowDefinitions>
        <StatusBar HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}" Grid.Row="1" Margin="0,0,0,-4"/>
        <TabControl x:Name="Tabs" Margin="1" FontSize="16" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" BorderBrush="{x:Null}">
            <TabItem x:Name="AutoTabItrm" Header="_Автоматический режим " Margin="4.5,0,0,0">
                <Grid Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="70"/>
                    </Grid.RowDefinitions>
                    <ToggleButton x:Name="BringAutoButton" Content="_Привезти" HorizontalAlignment="Right" Height="50" Width="100" Margin="0,0,168,10"         VerticalAlignment="Bottom"  FontWeight="Bold" Grid.Row="1" Click="ToggleButton_Click"  />
                    <ToggleButton x:Name="CarryAwayAutoButton" Content="_Увезти" HorizontalAlignment="Center" Width="110" Margin="381,0,387,10"  FontWeight="Bold" Grid.Row="1" MinWidth="100" MinHeight="50" MaxWidth="104" Grid.ColumnSpan="2" VerticalAlignment="Bottom" />
                    <ToggleButton x:Name="CancleAutoButton" Content="_Отменить" HorizontalAlignment="Left" Width="100" Margin="172,0,0,10"     FontWeight="Bold" Grid.Row="1" Grid.Column="1" Height="50" VerticalAlignment="Bottom" />
                    <ListView x:Name="OrdersLitsView" Grid.ColumnSpan="2">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem x:Name="ManualTabItem" Header="_Ручной режим">
                <Grid Margin="3" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ToggleButton x:Name="LeftRackManualButton" Content="X" HorizontalAlignment="Left" Height="50" Margin="10,26.717,0,0" VerticalAlignment="Top" Width="50"  FontSize="20" Grid.Column="1" MinWidth="50" MinHeight="50"/>
                    <ToggleButton x:Name="RightRackManualButton" Content="Y" HorizontalAlignment="Right" Height="50" Margin="0,26.717,10,0" Width="50"  FontSize="20" Grid.Column="2" VerticalAlignment="Top"/>
                    <Label Content="Стеллаж" Grid.Column="1" Height="50" Margin="152,25.062,148,0" VerticalAlignment="Top" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.ColumnSpan="2" FontWeight="Bold"/>
                    <ComboBox x:Name="RowManualComboBox" Grid.Column="1" HorizontalAlignment="Left" Margin="10,33.462,0,0" Width="60" Grid.Row="1" Height="50" VerticalAlignment="Top" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsSynchronizedWithCurrentItem="False"/>
                    <Label Content="Ряд" Grid.Column="1" HorizontalAlignment="Center" Height="50" Margin="192,33.462,182,0" VerticalAlignment="Top" Width="60" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1" Grid.ColumnSpan="2" FontWeight="Bold"/>
                    <ComboBox x:Name="FloorManualCombobox" Grid.Column="1" HorizontalAlignment="Left" Height="50" Margin="10,32.86,0,0" VerticalAlignment="Top" Width="60" Grid.Row="2" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsSynchronizedWithCurrentItem="False"/>
                    <Label Content="Этаж" Grid.Column="1" HorizontalAlignment="Center" Height="50" Margin="187,32.86,187,0" VerticalAlignment="Top" Width="60" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="2" Grid.ColumnSpan="2" FontWeight="Bold"/>
                    <ToggleButton x:Name="BringManualButton" Content="Привезти" Grid.Column="1" HorizontalAlignment="Left" Height="50" Margin="0,0,0,10" Grid.Row="3" VerticalAlignment="Bottom" Width="100" FontSize="16" FontWeight="Bold"/>
                    <ToggleButton x:Name="CarryAwayManualButton" Content="Увезти" Grid.Column="2" HorizontalAlignment="Right" Height="50" Margin="0,0,0,10" Grid.Row="3" VerticalAlignment="Bottom" Width="100" FontSize="16" FontWeight="Bold"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="ErrorTabItem" Header="Ошибки">
                <Grid Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="70"/>
                    </Grid.RowDefinitions>
                    <ListView x:Name="testListView" Margin="3" Grid.ColumnSpan="2">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="SubmitErrorButton" Content="Подтвердить" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="140" Margin="374,0,364,10" Grid.Row="1" Height="50" Grid.ColumnSpan="2" FontSize="16" FontWeight="Bold" MinWidth="120" MaxWidth="130"/>
                </Grid>
            </TabItem>
            <TabItem Header="Настройка">
                <Grid Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="КоорTextBoxдинаты ячеек" Margin="6,0,6,3" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Grid.ColumnSpan="2">
                        <Grid Grid.ColumnSpan="2" Margin="0,0,-2,0" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="29*"/>
                                <RowDefinition Height="90*"/>
                                <RowDefinition Height="98*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="143*"/>
                                <ColumnDefinition Width="143*"/>
                                <ColumnDefinition Width="143*"/>
                                <ColumnDefinition Width="143*"/>
                                <ColumnDefinition Width="143*"/>
                                <ColumnDefinition Width="143*"/>
                                <ColumnDefinition Width="143*"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="RackComboBox" HorizontalAlignment="Center" Margin="89,0,73,5" Width="83" Grid.Row="1" Height="36" Grid.ColumnSpan="2" VerticalAlignment="Bottom" SelectionChanged="CellChanged"/>
                            <TextBox x:Name="CoordinateXTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="0" Width="100" Margin="72.463,0,72.109,5" Grid.Row="1" Height="36" Grid.Column="3" Grid.ColumnSpan="2" VerticalAlignment="Bottom" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="20"/>
                            <TextBox x:Name="CoordinateYTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="0" Width="100" Margin="72.357,0,72.214,5" Grid.Row="1" Height="36" Grid.Column="4" Grid.ColumnSpan="2" VerticalAlignment="Bottom" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="20"/>
                            <CheckBox x:Name="IsNOTAvailableCheckBox" Content="Ячейка&#xD;&#xA;отсутсвует" Grid.Column="5" HorizontalAlignment="Center" Height="50" Margin="72.879,0,47.228,3" Grid.Row="1" VerticalAlignment="Bottom" Width="125" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
                            <Button x:Name="SaveButton" Content="Записать" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Margin="11.143,0,11.143,10" Grid.Row="2" Height="36" Grid.Column="3" FontWeight="Bold" Click="SaveButton_Click"/>
                            <Label Content="Стеллаж" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="72.356,26.651,72.215,56.393" Grid.ColumnSpan="2" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Height="36" Grid.RowSpan="2"/>
                            <Label Content="Ряд" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Grid.Column="1" Margin="73.769,26.651,70.802,56.393" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Height="36" Grid.RowSpan="2"/>
                            <Label Content="Этаж" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Margin="72.446,26.651,72.126,56.393" Grid.ColumnSpan="2" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Height="36" Grid.RowSpan="2"/>
                            <Label Content="X" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="3" Margin="68.716,26.651,75.856,56.393" Grid.ColumnSpan="2" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Height="36" Grid.RowSpan="2"/>
                            <Label Content="Y" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="4" Margin="73.716,26.651,70.855,56.393" Grid.ColumnSpan="2" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Height="36" Grid.RowSpan="2"/>
                            <ComboBox x:Name="RowComboBox" Grid.ColumnSpan="2" Grid.Column="1" HorizontalAlignment="Left" Margin="73.574,49,0,0" Grid.Row="1" VerticalAlignment="Top" Width="99" Height="36" SelectionChanged="CellChanged"/>
                            <ComboBox x:Name="FloorComboBox" Grid.ColumnSpan="2" Grid.Column="2" HorizontalAlignment="Left" Margin="73,49,0,0" Grid.Row="1" VerticalAlignment="Top" Width="99" Height="36" SelectionChanged="CellChanged"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox VerticalContentAlignment="Bottom" Margin="6,0,3,3" Grid.Row="1" Header="Перейти на координаты">
                        <Grid Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Margin="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="73*"/>
                                <RowDefinition Height="72*"/>
                                <RowDefinition Height="73*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="GotoButton" Content="Перейти" HorizontalAlignment="Center" VerticalAlignment="Center" Width="101" Grid.ColumnSpan="2" Margin="158,27,159,10" Height="36" Grid.Row="2" MinWidth="101" MinHeight="36" MaxWidth="110" MaxHeight="41" FontWeight="Bold"/>
                            <TextBox x:Name="GotoXTextBox" HorizontalAlignment="Center" Height="30" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" Width="100" RenderTransformOrigin="0.492,0.45" Grid.ColumnSpan="2" Margin="159,37,159,6" MinWidth="100" MinHeight="30" MaxWidth="100" MaxHeight="30" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="20"/>
                            <TextBox x:Name="GotoYTextBox" HorizontalAlignment="Center" Height="30" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" Width="100" Grid.ColumnSpan="2" Margin="159,34,159,8" MinWidth="100" MinHeight="30" MaxWidth="100" MaxHeight="30" Grid.Row="1" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="20"/>
                            <Label Content="X" HorizontalAlignment="Center" Margin="159,7,159,36" VerticalAlignment="Center" Width="100" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="30" MinWidth="100" MinHeight="30" MaxWidth="100" MaxHeight="30" FontSize="20"/>
                            <Label Content="Y" HorizontalAlignment="Center" Margin="159,3.848,159,37.848" VerticalAlignment="Center" Width="100" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="30" MinWidth="100" MinHeight="30" MaxWidth="100" MaxHeight="30" Grid.Row="1" FontSize="20"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Премещение" Margin="3,0,6,3" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Grid.Column="1" Grid.Row="1">
                        <Grid Grid.Column="1" Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Margin="3">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="CloserButton" Content="БЛИЖЕ" HorizontalAlignment="Center" VerticalAlignment="Center" Width="103" Margin="53,28,50,28" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2" Height="50" FontWeight="Bold"/>
                            <Button x:Name="DownButton" Content="ВНИЗ" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Margin="53,29,53,27" Grid.ColumnSpan="2" Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" Height="50" FontWeight="Bold"/>
                            <Button x:Name="UpButton" Content="ВВЕРХ" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Margin="51.75,26.85,51.25,27.69" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Height="50" FontWeight="Bold"/>
                            <Button x:Name="FartherButton" Content="ДАЛЬШЕ" HorizontalAlignment="Center" VerticalAlignment="Center" Width="103" Margin="49,28,54,28" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2" Height="50" FontWeight="Bold"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
