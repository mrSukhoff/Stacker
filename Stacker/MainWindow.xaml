<Window x:Class="Probe1.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Probe1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900" MinWidth="900" MinHeight="599.9" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Loaded="Window_Loaded">
    <Grid Margin="1,1,1,3">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="30"/>
        </Grid.RowDefinitions>
        <StatusBar HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}" Grid.Row="1" Margin="0,0,0,-4"/>
        <TabControl Margin="1" FontSize="16" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" BorderBrush="{x:Null}">
            <TabItem Header="_Автоматический режим " Margin="4.5,0,0,0">
                <Grid Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="67.72"/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="ClaimsDataGrid" Margin="3,5" HeadersVisibility="Row" SelectionMode="Single" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}" Grid.ColumnSpan="4"/>
                    <ToggleButton Content="_Привезти" HorizontalAlignment="Left" Height="50" Width="100" Margin="171,0,0,10"         VerticalAlignment="Bottom"  FontWeight="Bold" Grid.Row="1" Grid.ColumnSpan="2"  />
                    <ToggleButton Content="_Отменить" HorizontalAlignment="Right" Height="50" Width="100" Margin="0,8,167,0"      VerticalAlignment="Top"     FontWeight="Bold" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" />
                    <ToggleButton Content="_Увезти" HorizontalAlignment="Center"  Height="50" Width="100" Margin="163,8,168,0"  VerticalAlignment="Top"  FontWeight="Bold" Grid.Row="1" MinWidth="100" MinHeight="50" MaxWidth="104" Grid.Column="1" Grid.ColumnSpan="2" />
                </Grid>
            </TabItem>
            <TabItem Header="_Ручной режим">
                <Grid Margin="3" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ToggleButton Content="X" HorizontalAlignment="Left" Height="50" Margin="10,26.717,0,0" VerticalAlignment="Top" Width="50"  FontSize="20" Grid.Column="1" MinWidth="50" MinHeight="50"/>
                    <ToggleButton Content="Y" HorizontalAlignment="Right" Height="50" Margin="0,26.717,10,0" Width="50"  FontSize="20" Grid.Column="2" VerticalAlignment="Top"/>
                    <Label Content="Стеллаж" Grid.Column="1" Height="50" Margin="152,25.062,148,0" VerticalAlignment="Top" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.ColumnSpan="2" FontWeight="Bold"/>
                    <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="10,33.462,0,0" Width="60" Grid.Row="1" Height="50" VerticalAlignment="Top"/>
                    <Label Content="Ряд" Grid.Column="1" HorizontalAlignment="Center" Height="50" Margin="192,33.462,182,0" VerticalAlignment="Top" Width="60" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1" Grid.ColumnSpan="2" FontWeight="Bold"/>
                    <ComboBox Grid.Column="1" HorizontalAlignment="Left" Height="50" Margin="10,32.86,0,0" VerticalAlignment="Top" Width="60" Grid.Row="2"/>
                    <Label Content="Этаж" Grid.Column="1" HorizontalAlignment="Center" Height="50" Margin="187,32.86,187,0" VerticalAlignment="Top" Width="60" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="2" Grid.ColumnSpan="2" FontWeight="Bold"/>
                    <ToggleButton Content="Привезти" Grid.Column="1" HorizontalAlignment="Left" Height="50" Margin="0,0,0,10" Grid.Row="3" VerticalAlignment="Bottom" Width="100" FontSize="16" FontWeight="Bold"/>
                    <ToggleButton Content="Увезти" Grid.Column="2" HorizontalAlignment="Right" Height="50" Margin="0,0,0,10" Grid.Row="3" VerticalAlignment="Bottom" Width="100" FontSize="16" FontWeight="Bold"/>
                </Grid>
            </TabItem>
            <TabItem Header="Ошибки">
                <Grid Background="#FFE5E5E5">
                    <ListView x:Name="testListView" Margin="3">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Настройка">
                <Grid Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="Координаты ячеек" Margin="6,0,6,3" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Grid.ColumnSpan="2">
                        <Grid Grid.ColumnSpan="2" Margin="0,0,-2,0" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="123*"/>
                                <ColumnDefinition Width="733*"/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </GroupBox>
                    <GroupBox VerticalContentAlignment="Bottom" Margin="6,0,3,3" Grid.Row="1" Header="Перейти на координаты">
                        <Grid Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Margin="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="73*"/>
                                <RowDefinition Height="72*"/>
                                <RowDefinition Height="73*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Content="Перейти" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Grid.ColumnSpan="2" Margin="159,27,159,10" Height="36" Grid.Row="2" MinWidth="101" MinHeight="36" MaxWidth="110" MaxHeight="41"/>
                            <TextBox HorizontalAlignment="Center" Height="30" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="100" RenderTransformOrigin="0.492,0.45" Grid.ColumnSpan="2" Margin="159,37,159,6" MinWidth="100" MinHeight="30" MaxWidth="100" MaxHeight="30"/>
                            <TextBox HorizontalAlignment="Center" Height="30" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="100" Grid.ColumnSpan="2" Margin="159,34,159,8" MinWidth="100" MinHeight="30" MaxWidth="100" MaxHeight="30" Grid.Row="1"/>
                            <Label Content="X" HorizontalAlignment="Center" Margin="159,7,159,36" VerticalAlignment="Center" Width="100" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="30" MinWidth="100" MinHeight="30" MaxWidth="100" MaxHeight="30"/>
                            <Label Content="Y" HorizontalAlignment="Center" Margin="159,8,159,34" VerticalAlignment="Center" Width="100" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="30" MinWidth="100" MinHeight="30" MaxWidth="100" MaxHeight="30" Grid.Row="1"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Премещение" Margin="3,0,6,3" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Grid.Column="1" Grid.Row="1">
                        <Grid Grid.Column="1" Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Margin="3">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Content="БЛИЖЕ" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Margin="51.585,27.234,51.415,27.306" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2" Height="50"/>
                            <Button Content="ВНИЗ" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Margin="51.709,27.453,51.291,27.087" Grid.ColumnSpan="2" Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" Height="50"/>
                            <Button Content="ВВЕРХ" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Margin="51.75,26.85,51.25,27.69" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Height="50"/>
                            <Button Content="ДАЛЬШЕ" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Margin="51.709,27.567,51.291,26.973" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2" Height="50"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
